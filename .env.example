# Database (Required)
POSTGRES_URL="postgres://postgres:postgrespassword@localhost:5435/fastform"

# Auth (Required)
# Generate with: `npx auth secret` or `openssl rand -base64 32`
AUTH_SECRET="generate_a_secret_here"

# NextAuth Secret (Required for Auth.js)
# Used for session token encryption and CSRF protection
NEXTAUTH_SECRET="generate_a_secret_here"

# v0 SDK (Required)
# Get your key from https://v0.dev/settings/api
V0_API_KEY=""

# Optional Overrides
V0_API_URL="https://api.v0.dev"
# AUTH_URL="http://localhost:3000"

# ============================================================================
# LLM Providers (At least one required)
# ============================================================================

# Azure OpenAI (Preferred)
# Azure endpoint URL for OpenAI API (includes resource name)
AZURE_OPENAI_ENDPOINT=""
# Azure OpenAI API key (get from Azure Portal)
AZURE_OPENAI_KEY=""
# Azure OpenAI api-version query parameter.
# If unsure, start with: 2025-01-01-preview
AZURE_OPENAI_API_VERSION="2025-01-01-preview"

# Use deployment-based URLs (recommended for most Azure OpenAI resources):
# - true  => /openai/deployments/{deployment}/chat/completions
# - false => /openai/v1/chat/completions
AZURE_OPENAI_USE_DEPLOYMENT_URLS="true"

# Model / deployment name:
# - For Azure OpenAI: this is your Azure *deployment name* (often "gpt-4o", "gpt-5", etc.)
# - For direct OpenAI: this is the OpenAI model id
OPENAI_MODEL="gpt-5"
# Direct OpenAI (Fallback)
# OpenAI API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=""

# Anthropic (Fallback)
# Anthropic API key from https://console.anthropic.com/
ANTHROPIC_API_KEY=""

# ============================================================================
# GitHub Integration (Required for deployment)
# ============================================================================

# GitHub Personal Access Token
# Required permissions: repo:write for getfastform organization
# Generate at: https://github.com/settings/tokens
GITHUB_TOKEN=""

# ============================================================================
# Vercel Integration (Required for deployment status)
# ============================================================================

# Vercel API Token
# Used to check deployment status and manage projects
# Generate at: https://vercel.com/account/tokens
VERCEL_TOKEN=""

# ============================================================================
# Email / Magic Links (Required for authentication)
# ============================================================================

# SMTP Host (e.g., smtp.gmail.com, smtp.sendgrid.net)
SMTP_HOST=""

# SMTP Port (typically 587 for TLS, 465 for SSL, 25 for unencrypted)
SMTP_PORT="587"

# SMTP Username (often your email address)
SMTP_USER=""

# SMTP Password (app-specific password for Gmail, API key for SendGrid)
SMTP_PASS=""
